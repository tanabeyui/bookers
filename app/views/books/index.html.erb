<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Boby</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book.id) %></td>
      <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td><%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      <td>
    </tr>
    <% end %>
  </tbody>
</table>


<h2>New book</h2>
<%= form_with model: @book,url: '/books', method: :post do |f| %>
  <div class="field">
    Title<br>
    <%= f.text_field :title %>
	</div>
  <div class="field">
    Body<br>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.submit ' Create Book ' %>
  </div>
<% end %>