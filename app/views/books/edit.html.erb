<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
  <div class="field">Title<br>
    <%= f.text_field :title %>
	</div>
  <div class="field">Body<br>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.submit ' Update Book ' %>
  </div>
<% end %>

